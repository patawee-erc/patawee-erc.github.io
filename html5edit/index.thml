    <!-- ‡πÇ‡∏´‡∏•‡∏î Ace Editor -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.4.12/ace.js"></script>
    <style>
        * { box-sizing: border-box; }
        body {
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow: hidden;
            background-color: #202020;
        }

        /* Header */
        header {
            background-color: #333;
            color: #fff;
            padding: 0 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 50px;
            border-bottom: 1px solid #444;
        }
        h1 { font-size: 1.1rem; margin: 0; }
        
        .btn-group { display: flex; align-items: center; }
        
        .btn-group button {
            color: white;
            border: none;
            padding: 6px 15px;
            border-radius: 4px;
            cursor: pointer;
            margin-left: 8px;
            font-size: 0.9rem;
            font-weight: 600;
            transition: opacity 0.2s;
        }
        .btn-group button:hover { opacity: 0.9; }

        /* ‡∏™‡∏µ‡∏õ‡∏∏‡πà‡∏°‡∏ï‡πà‡∏≤‡∏á‡πÜ */
        button.run { background-color: #007acc; } /* ‡∏™‡∏µ‡∏ü‡πâ‡∏≤ */
        button.save { background-color: #8e44ad; } /* ‡∏™‡∏µ‡∏°‡πà‡∏ß‡∏á */
        button.clear { background-color: #c0392b; } /* ‡∏™‡∏µ‡πÅ‡∏î‡∏á */

        /* Checkbox Label */
        .auto-run-label {
            font-size: 0.8rem; 
            margin-left: 15px; 
            cursor: pointer;
            user-select: none;
        }

        /* Container */
        .container {
            display: flex;
            flex: 1;
            width: 100%;
            height: calc(100vh - 50px);
            position: relative;
        }

        /* Editor (Left) */
        #editor-container {
            width: 50%;
            height: 100%;
            position: relative;
        }
        #editor {
            position: absolute;
            top: 0; right: 0; bottom: 0; left: 0;
            font-size: 16px;
            line-height: 1.5;
        }

        /* Resizer Bar */
        .resizer {
            width: 10px;
            background-color: #444;
            cursor: col-resize;
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 10;
        }
        .resizer:hover { background-color: #007acc; }
        .resizer::after {
            content: "‚ãÆ";
            color: #888;
            font-weight: bold;
        }

        /* Preview (Right) */
        #preview-container {
            flex: 1;
            background-color: white;
            position: relative;
        }
        iframe {
            width: 100%;
            height: 100%;
            border: none;
        }
        
        /* Overlay for dragging */
        .overlay {
            position: absolute;
            top: 0; left: 0; right: 0; bottom: 0;
            display: none;
            z-index: 20;
        }
    </style>
</head>
<body>

    <header>
        <h1>HTML Editor Pro</h1>
        <div class="btn-group">
            <!-- ‡∏õ‡∏∏‡πà‡∏°‡∏Å‡∏î‡∏ï‡πà‡∏≤‡∏á‡πÜ -->
            <button class="clear" onclick="clearCode()">Clear</button>
            <button class="run" onclick="runCode()">Run ‚ñ∂</button>
            <button class="save" onclick="saveCode()">üíæ Save .html</button>
            
            <label class="auto-run-label">
                <input type="checkbox" id="autoRun" checked> Auto Run
            </label>
        </div>
    </header>

    <div class="container" id="mainContainer">
        <div id="editor-container">
            <div id="editor"><!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<style>
  body { 
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    font-family: 'Segoe UI', sans-serif; 
    text-align: center; 
    padding-top: 50px;
    height: 100vh;
    margin: 0;
  }
  .box {
    background: white;
    padding: 30px;
    border-radius: 15px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    display: inline-block;
