</head>
<body>

  <div class="box">
    <h1>Hello World!</h1>
    <p>‡∏ó‡∏î‡∏™‡∏≠‡∏ö‡∏Å‡∏≤‡∏£ Save ‡πÑ‡∏ü‡∏•‡πå</p>
    <p>‡∏Å‡∏î‡∏õ‡∏∏‡πà‡∏° <b>"Save .html"</b> ‡∏î‡πâ‡∏≤‡∏ô‡∏ö‡∏ô<br>‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÇ‡∏´‡∏•‡∏î‡∏´‡∏ô‡πâ‡∏≤‡∏ô‡∏µ‡πâ‡πÑ‡∏õ‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô‡∏à‡∏£‡∏¥‡∏á</p>
  </div>

</body>
</html></div>
        </div>

        <div class="resizer" id="dragMe"></div>

        <div id="preview-container">
            <div class="overlay" id="iframeOverlay"></div>
            <iframe id="previewFrame"></iframe>
        </div>
    </div>

    <script>
        // 1. Setup Ace Editor
        var editor = ace.edit("editor");
        editor.setTheme("ace/theme/monokai");
        editor.session.setMode("ace/mode/html");
        editor.setOptions({
            fontSize: "14pt",
            enableBasicAutocompletion: true,
            enableLiveAutocompletion: true
        });

        // Run Code Function
        function runCode() {
            var code = editor.getValue();
            var frame = document.getElementById("previewFrame");
            frame.srcdoc = code;
        }

        // Auto Run Listener
        editor.session.on('change', function(delta) {
            if(document.getElementById('autoRun').checked){
                runCode();
            }
        });

        // Clear Function
        function clearCode() {
            if(confirm("‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏•‡πâ‡∏≤‡∏á‡πÇ‡∏Ñ‡πâ‡∏î‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î?")) {
                editor.setValue("");
            }
        }

        // ==========================================
        //  ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô Save Code ‡πÄ‡∏õ‡πá‡∏ô‡πÑ‡∏ü‡∏•‡πå .html (‡πÉ‡∏´‡∏°‡πà)
        // ==========================================
        function saveCode() {
            // 1. ‡∏î‡∏∂‡∏á‡πÇ‡∏Ñ‡πâ‡∏î‡∏à‡∏≤‡∏Å Editor
            var codeContent = editor.getValue();

            // 2. ‡∏™‡∏£‡πâ‡∏≤‡∏á Blob (‡πÑ‡∏ü‡∏•‡πå‡∏à‡∏≥‡∏•‡∏≠‡∏á) ‡∏õ‡∏£‡∏∞‡πÄ‡∏†‡∏ó text/html
            var blob = new Blob([codeContent], { type: "text/html;charset=utf-8" });

            // 3. ‡∏™‡∏£‡πâ‡∏≤‡∏á Link ‡∏ä‡∏±‡πà‡∏ß‡∏Ñ‡∏£‡∏≤‡∏ß‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏Å‡∏î Download
            var link = document.createElement("a");
            link.href = URL.createObjectURL(blob);
            link.download = "index.html"; // ‡∏ï‡∏±‡πâ‡∏á‡∏ä‡∏∑‡πà‡∏≠‡πÑ‡∏ü‡∏•‡πå‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô‡∏ï‡∏£‡∏á‡∏ô‡∏µ‡πâ

            // 4. ‡∏™‡∏±‡πà‡∏á‡∏Å‡∏î Link ‡πÅ‡∏•‡πâ‡∏ß‡∏•‡∏ö‡∏ó‡∏¥‡πâ‡∏á
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }

        // Load content on start
        window.onload = runCode;

        // 2. Resizable Logic (‡πÄ‡∏´‡∏°‡∏∑‡∏≠‡∏ô‡πÄ‡∏î‡∏¥‡∏°)
        const resizer = document.getElementById('dragMe');
        const leftSide = document.getElementById('editor-container');
        const container = document.getElementById('mainContainer');
        const iframeOverlay = document.getElementById('iframeOverlay');
        let x = 0;
        let leftWidth = 0;

        const mouseDownHandler = function(e) {
            x = e.clientX;
            leftWidth = leftSide.getBoundingClientRect().width;
            iframeOverlay.style.display = 'block';
            document.addEventListener('mousemove', mouseMoveHandler);
            document.addEventListener('mouseup', mouseUpHandler);
            document.body.style.cursor = 'col-resize';
            leftSide.style.userSelect = 'none';
        };

        const mouseMoveHandler = function(e) {
            const dx = e.clientX - x;
            const newLeftWidth = ((leftWidth + dx) * 100) / container.getBoundingClientRect().width;
            if(newLeftWidth > 10 && newLeftWidth < 90) {
                leftSide.style.width = `${newLeftWidth}%`;
            }
        };

        const mouseUpHandler = function() {
            iframeOverlay.style.display = 'none';
            document.body.style.cursor = 'default';
            leftSide.style.removeProperty('user-select');
            document.removeEventListener('mousemove', mouseMoveHandler);
            document.removeEventListener('mouseup', mouseUpHandler);
        };

        resizer.addEventListener('mousedown', mouseDownHandler);
    </script>
</body>
</html>
